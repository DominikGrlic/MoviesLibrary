@model IEnumerable<CinemaProject.Models.Actor>


<h1 class="font-monospace">All actors</h1>

@if (!string.IsNullOrEmpty(ViewBag.errormsg))
{
    <p>@ViewBag.errormsg</p>
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfileImageUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="~/Images/Actors/@item.ProfileImageUrl" alt="no existing image" style="max-width: 200px">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Actor" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-outline-info" asp-controller="Actor" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a> | <a class="btn btn-danger" asp-controller="Actor" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="text-white">
    <a asp-controller="Actor" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add new</a>
</div>
